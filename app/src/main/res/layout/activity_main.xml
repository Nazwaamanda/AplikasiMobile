<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/tvCounter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/add_number"
        android:textAlignment="center"
        android:textSize="30sp"
        android:textStyle="bold"
        />



    <Button
        android:id="@+id/btnAddNumber"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="Add Number" /> <!-- Hapus android:onClick -->

    <Button
        android:id="@+id/btnSubtractNumber"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Subtract Number"
        android:layout_marginTop="10dp" />

    <Button
        android:id="@+id/btnResetNumber"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Reset Number"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="16dp" />

</LinearLayout>
